{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/simple.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/simple",
      "dest": "/api/simple.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "VERCEL": "true",
    "FLASK_ENV": "production",
    "FLASK_DEBUG": "0"
  },
  "functions": {
    "api/index.py": {
      "memory": 1536,
      "maxDuration": 30
    },
    "api/simple.py": {
      "memory": 512,
      "maxDuration": 5
    }
  }
} 